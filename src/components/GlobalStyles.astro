---
import Normalize from './Normalize.astro';
import Typography from './Typography.astro';
---

<style is:global>
    body,
    html {
        height: 100%;
        width: 100%;
    }

    body *:focus,
    html *:focus {
        outline: none;
    }

    a,
    a:hover,
    a:visited,
    a:active {
        color: inherit;
        text-decoration: none;
    }
</style>